<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BlogsMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbars="vertical"
    tools:context="com.shashank.tcd3.BlogsMainActivity">

    <RelativeLayout
        android:id="@+id/blogsmainactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/blogsmainactivitylinear1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/blogsmainactivitycard_view"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/blogsmainactivityappLabel"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/random5" />


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/blogsmainactivityrelative2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/blogsmainactivitylinear1"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/topiclabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="cursive"
                android:text="Topic:- About Steve Jobs"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/namelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topiclabel"
                android:fontFamily="cursive"
                android:text="Name:- Shashank Karn"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Courselabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namelabel"
                android:fontFamily="cursive"
                android:text="Course:- B.Tech"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Branchlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Courselabel"
                android:fontFamily="cursive"
                android:text="Branch:- Computer Science"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Yearlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Branchlabel"
                android:fontFamily="cursive"
                android:text="Year:- 3rd Year"
                android:textSize="18dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/CircleButton1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="55dp"
                android:background="@drawable/circle_button"
                android:textSize="12dp"
                android:text="About Steve Jobs"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blogsmainactivityrelative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/blogsmainactivityrelative2"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/topiclabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:fontFamily="cursive"
                android:layout_alignParentRight="true"
                android:text="Topic:- Machine Learning"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/namelabel2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topiclabel2"
                android:fontFamily="cursive"
                android:layout_marginRight="30dp"
                android:text="Name:- Sonal Kanodia"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Courselabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/namelabel2"
                android:layout_marginRight="76dp"
                android:fontFamily="cursive"
                android:text="Course:- B.Tech"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Branchlabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Courselabel2"
                android:fontFamily="cursive"
                android:layout_marginRight="4dp"
                android:text="Branch:- Computer Science"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Yearlabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Branchlabel2"
                android:fontFamily="cursive"
                android:text="Year:- 3rd Year"
                android:textSize="18dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/CircleButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle_button"
                android:text="Second Blog"
                android:textColor="#FFFFFF" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/blogsmainactivityrelative4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/blogsmainactivityrelative3"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/topiclabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="cursive"
                android:text="Topic:- Sixth Sense Robotics"
                android:textSize="15dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/namelabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topiclabel3"
                android:fontFamily="cursive"
                android:text="Name:- Anuj Tripathi"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Courselabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namelabel3"
                android:fontFamily="cursive"
                android:text="Course:- B.Tech"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Branchlabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Courselabel3"
                android:fontFamily="cursive"
                android:text="Branch:- Computer Science"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Yearlabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Branchlabel3"
                android:fontFamily="cursive"
                android:text="Year:- 3rd Year"
                android:textSize="18dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/CircleButton3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="55dp"
                android:background="@drawable/circle_button"
                android:text="Third Blog"
                android:textColor="#FFFFFF" />
        </RelativeLayout>


    </RelativeLayout>

</ScrollView>