<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear8firstblog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstblogTopic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view8slide_layout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/slideImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/eat_icon" />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/slideHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view8slide_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Reminder"
            android:textColor="#FF0000"
            android:textSize="45dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slideDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slideHeading"
            android:layout_margin="10dp"
            android:fontFamily="cursive"
            android:text="@string/Slider_text_content_first"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>