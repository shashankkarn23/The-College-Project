<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_chat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:scrollbars="vertical"
    tools:context=".VideoChatActivity">

    <RelativeLayout
        android:id="@+id/relative1_video_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_video_chat"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_video_chat"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/appLabel_video_chat"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/random5"
                    android:background="@drawable/random5">

                </ImageView>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/live_college"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_video_chat"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:background="#000000"
            android:text="Present Ma'am"
            android:textColor="#FFFFFF"
            android:textSize="65dp" />

        <EditText
            android:id="@+id/call_edit_text"
            android:background="#FF0000"
            android:textColorHint="#ffffff"
            android:hint="Phone No."
            android:inputType="phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:maxLength="10"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/live_college"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <LinearLayout
            android:id="@+id/linear2_video_chat"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/call_edit_text"
            android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageBtnCall"
            android:layout_marginLeft="10dp"
            android:src="@drawable/random29"
            android:background="#000000"
            android:layout_below="@+id/call_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>