                android:background="@drawable/random22" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view15collegegallery"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_margin="10dp"
            android:layout_below="@id/card_view14collegegallery"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/appLabe25collegegallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/random23" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view16collegegallery"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_margin="10dp"
            android:layout_below="@id/card_view15collegegallery"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/appLabe26collegegallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/random24" />
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>