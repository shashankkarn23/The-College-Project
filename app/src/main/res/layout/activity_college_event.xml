<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collegeevent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:scrollbars="vertical"
    tools:context=".CollegeEventActivity">

    <RelativeLayout
        android:id="@+id/collegeeventrelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/notesneighbourlabelcollegeevent"
            android:src="@drawable/random5"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp" />
        <TextView
            android:id="@+id/collegeeventTextView"
            android:layout_below="@id/notesneighbourlabelcollegeevent"
            android:textSize="65dp"
            android:fontFamily="cursive"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:text="College Events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view9collegeevent"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_margin="10dp"
            android:layout_below="@id/collegeeventTextView"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/appLabel9collegeevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/random14" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view10collegeevent"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_margin="10dp"
            android:layout_below="@id/card_view9collegeevent"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/appLabe20collegeevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/random15" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view11collegeevent"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_margin="10dp"
            android:layout_below="@id/card_view10collegeevent"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/appLabe21collegeevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/random16" />
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>